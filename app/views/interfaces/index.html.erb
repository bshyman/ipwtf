<div class="row">
  <div class="col-12">
    <div class="card card-default position-relative inspectable">
      <!-- component-title: Active Users Table -->
      <div class="card-header">
        <h6>Interfaces</h6>
        <a class="btn btn-primary" data-toggle="modal" href="#new-interface-modal">Trigger modal</a>

        <%= link_to new_interface_path, class: 'btn btn-primary btn-circle add-interface' do %>
          Add Interface &nbsp;
          <i class="fa fa-plus" style="color: #2E354F;"></i>

        <% end %>

      </div>
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
          <tr>
            <th>#</th>
            <th>IP</th>
            <th>DDNS</th>
            <th>Status</th>
            <th>Port</th>
            <th>Action</th>
          </tr>
          </thead>

          <tbody>
          <% @interfaces.each do |interface| %>
            <tr>
              <td>1</td>
              <td><strong><%= interface.ip %></strong></td>
              <td><%= interface.ddns %></td>
              <td><span class="badge badge-<%= interface.alive? ? 'success' : 'danger' %>"><%= interface.ui_life_status %></span></td>
              <td><%= interface.port %></td>
              <td>
                <div class="btn-group btn-group-xs">
                  <a data-toggle="tooltip" class="btn " data-original-title="Delete"><%= theme_icon_tag "trash" %></a>
                  <a data-toggle="tooltip" class="btn " data-original-title="Edit"><%= theme_icon_tag "pencil-alt" %> </a>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $('.add-interface').on('click', function(e){
    })
  })
</script>

