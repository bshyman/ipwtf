<div class="modal fade" id="settings-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Settings</h4>
      </div>
      <div class="modal-body">
        <%= form_tag user_update_path(current_user), method: 'put', class: 'settings-form' do %>
          <div class="form-group">
            <%= label_tag :refresh_interval, 'Refresh Interval', class: 'control-label pull-left' %>
            <span class="pull-right">
                <%= select_tag :refresh_interval, options_for_select(['Manual', 2, 5, 30, 60]), disabled: 'disabled' %>
              <span class="mlh">min</span>
            </span>
          </div>
          <div class="clearfix"></div>
          <div class="form-group row">
            <span class="col-sm-10">
              Unsubscribe
            </span>
            <span class="col-sm-push-11 col-sm-1">
            <input type="checkbox" name="unsubscribe" class="bootstrap-switch pull-right unsub-toggle" data-on-color="danger"/>
            </span>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= button_tag 'Save', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
