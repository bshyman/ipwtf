
<div class="modal fade" id="new-user-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign up</h4>
      </div>
      <div class="modal-body">
        <%= form_for User.new, url: users_path, action: 'create', method: 'post', class: 'form-horizontal' do |f| %>
          <div class="form-group row">
            <span class="col-sm-6 col-xs-12">
              <%= f.label :email, class: 'sr-only' %>
              <%= f.email_field :email, class: 'form-control ', placeholder: 'Enter email' %>
            </span>
            <span class="col-sm-6 col-xs-12">
              <%= f.label :password, class: 'sr-only' %>
              <%= f.password_field :password, class: 'form-control ', placeholder: 'Enter password' %>
            </span>
          </div>
          <div class="form-group row">
            <span class="col-sm-6 col-xs-12">
              <%= f.label :first_name, class: 'sr-only' %>
              <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
            </span>
            <span class="col-sm-6 col-xs-12">
              <%= f.label :last_name, class: 'sr-only' %>
              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
            </span>
          </div>
          <div class="form-group row">
            <span class="col-xs-12 col-sm-6">
              <%= f.label :phone, class:'sr-only' %>
              <%= f.phone_field :phone, class:'form-control', placeholder:'Mobile phone (Optional)' %>
            </span>
            <span class="col-xs-12 col-sm-6">
            </span>
            
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
        <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript" charset="utf-8">

</script>